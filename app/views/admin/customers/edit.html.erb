<div class="container">
  <div class="row">
    <%= form_with url: admin_customer_path,model: @customer do |f| %>
    <h1><%= @customer.full_name %>さんの会員情報編集</h1>
    <div class="form-group">
      <%= f.label :"会員ID" %>
      <%= @customer.id %>
    </div>
    <div class="form-group">
      <%= f.label :"氏名" %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group">
      <%= f.label :"フリガナ" %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="form-group">
      <%= f.label :"郵便番号" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
      <%= f.label :"住所" %>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <%= f.label :"電話番号" %>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="form-group">
      <%= f.label :"メールアドレス" %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :"会員ステータス" %>
      <%= f.radio_button :is_deleted, "false" %>
      <%= f.label :"有効" %>
      <%= f.radio_button :is_deleted, "true" %>
      <%= f.label :"退会" %>
    </div>
    <div class="form-group">
      <%= f.submit "変更を保存",class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>