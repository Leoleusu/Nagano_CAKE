<h2>ジャンル一覧・追加</h2>
<%= render 'devise/shared/error_messages',resource: @genre %>
<%= form_with url: admin_genres_path, model: Genre.new, local: true do |f| %>
  <div class="form-group">
    <p>ジャンル名</p>
    <%= f.text_field :name,class: "name" %>
    <%= f.submit"新規登録",class: "btn btn-success" %>
  </div>
<% end %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
        <%= link_to "編集する",edit_admin_genre_path(genre.id),class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>