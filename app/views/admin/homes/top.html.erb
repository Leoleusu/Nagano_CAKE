<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |o| %>
        <tr class="moves-contents" onclick='window.location="/admin/orders/<%= o.id %>"' role="link">
          <td><%= o.created_at.strftime("%Y/%m/%d %H:%M:%S"),class: "text-decoration-underline" %></td>
          <td><%= o.customer.full_name %></td>
          <% total_amount = 0 %>
          <% o.order_details.each do |od| %>
            <% total_amount += od.amount %>
          <% end %>
            <td><%= total_amount %></td>
          <td><%= o.is_active_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>