<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |o| %>
        <tr>
          <td><%= link_to o.created_at,admin_order_path %></td>
          <td><%= o.customer.name %></td>
          <td></td>
          <td><%= o.is_active_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>