<div class="container">
    <h1>商品編集</h1>
    <div class="row">
        <%= render 'devise/shared/error_messages',resource: @item %>
        <%= form_with url: admin_item_path,model: @item do |f| %>
        <div class="form-group">
            <%= f.label :"商品画像" %>
            <%= f.file_field :image %>
        </div>
        <div class="form-group">
            <%= f.label :"商品名" %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
            <%= f.label :"商品説明" %>
            <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
            <%= f.label :"ジャンル" %>
            <%= f.collection_select :genre_id,Genre.all, :id, :name,
                                    :prompt => "--選択してください--" %>
        </div>
        <div class="form-group">
            <%= f.label :"税抜価格" %>
            <%= f.text_field :price %>
        </div>
        <div class="form-group">
            <%= f.radio_button :is_active, "active" %>
            <%= f.label :"販売中" %>
            <%= f.radio_button :is_active, "stop" %>
            <%= f.label :"販売停止中" %>
        </div>
        <div class="form-group">
            <%= f.submit "変更を保存",class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
</div>