<div class="container">
    <h1>商品新規登録</h1>
    <div class="row-fuild">
        <%= render 'devise/shared/error_messages',resource: @item %>
        <%= form_with url: admin_items_path,model: @item do |f| %>
        <div class="form-group ">
            <%= f.label :"商品画像",class: "col-3" %>
            <%= f.file_field :image,class: "col-4" %>
        </div>
        <div class="form-group">
            <%= f.label :"商品名",class: "col-3" %>
            <%= f.text_field :name,class: "col-4" %>
        </div>
        <div class="form-group">
            <%= f.label :"商品説明",class: "col-3" %>
            <%= f.text_area :introduction,class: "col-4" %>
        </div>
        <div class="form-group">
            <%= f.label :"ジャンル",class: "col-3" %>
            <%= f.collection_select :genre_id,Genre.all, :id, :name,
                                    :prompt => "--選択してください--",class: "col-4" %>
        </div>
        <div class="form-group">
            <%= f.label :"税抜価格",class: "col-3" %>
            <%= f.text_field :price,class: "col-4" %>
        </div>
        <div class="form-group">
            <%= f.label :"販売ステータス",class: "col-3" %>
            <%= f.radio_button :is_active, "active",{:checked => true} %>
            <%= f.label :"販売中",class: "pr-3" %>
            <%= f.radio_button :is_active, "stop" %>
            <%= f.label :"販売停止中" %>
        </div>
        <div class="form-group">
            <%= f.submit "新規登録",class: "btn btn-success col-2 offset-md-2" %>
        </div>
        <% end %>
    </div>
</div>