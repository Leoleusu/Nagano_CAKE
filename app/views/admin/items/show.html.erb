<div class="container">
  <div class="row-fluid">
      <%= image_tag @item.get_image(200,200),class: "col-md-2 pull-left" %>
      <div class="col-9">
          <div class="form-group">
            <p class="col-3">商品名</p>
            <h4 class="col-5"><%= @item.name %></h2>
          </div>
          <div class="form-group">
            <p>商品説明</p>
            <h4><small><%= @item.introduction %></small></h4>
          </div>
          <div class="form-group">
            <p class="#">(税込)<br/>(税抜)</p>
            <h4>¥<%= @item.with_tax_price %>(<%= @item.price %>) 円 </h4>
          </div>
          <div class="form-group">
            <p>販売ステータス</p>
            <% if @item.is_active == "active" %>
              <h4 class="text-success"><%= @item.is_active_i18n %></h4>
            <% else %>
              <h4><%= @item.is_active_i18n %></h4>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row offset-md-1">
        <%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-success col-2" %>
      </div>
  </div>
</div>