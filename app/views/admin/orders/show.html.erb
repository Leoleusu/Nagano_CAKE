<div class="container">
  <div class="row">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="row">
    <h4>購入者</h4>
    <%= @order.customer.full_name %>
  </div>
  <div class="row">
    <h4>注文日</h4>
    <%= @order.created_at %>
  </div>
  <div class="row">
    <h4>配送先</h4>
    <p>〒</p><%= @order.postal_code  %><p> </p><%= @order.address %></br><%= @order.name %>
  </div>
  <div class="row">
    <h4>支払方法</h4>
    <%= @order.payment_method_i18n %>
  </div>
  <div class="row">
    <%= form_with model: @order,url: admin_order_path do |f| %>
    <div class="form-group">
      <%= f.label :"注文ステータス" %>
      <%= f.select :is_active,Order.is_actives_i18n.keys.map %>
      <%= f.submit "更新",class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table col-7">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% total = 0 %>
        <% @order.order_details.each do |od| %>
        <tr>
          <td><%= od.item.name %></td>
          <td><%= od.purchase_price %></td>
          <td><%= od.amount %></td>
          <td><%= od.purchase_price*od.amount %></td>
          <% total += od.purchase_price*od.amount %>
          <%= form_with model: od,url: admin_order_detail_path(od),local: true do |f| %>
          <td><%= f.select :is_active,OrderDetail.is_actives_i18n.keys.map %></td>
          <td><%= f.submit "更新",class: "btn btn-success" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-3">
      <p>商品合計    <%= total %></p>
      <p>送料        <%= @order.postage %></p>
      <p>請求金額合計<%= total + @order.postage %></p>
    </div>
  </div>
</div>