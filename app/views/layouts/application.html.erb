<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/c44cf8e6f4.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container-fiuid">
        <div class="row-fiuld">
          <nav class="navbar navbar-expand-lg bg-light">
            <%= link_to root_path,class: "p-2" do %><%= image_tag('Logo.jpeg') %><% end %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="Navber">
              <ul class="navbar-nav ml-auto">
                <% if customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ",customer_path(current_customer),class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧",items_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート",cart_items_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト",destroy_customer_session_path,class: "btn ",method: :delete %>
                </li>
                <% elsif admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "商品一覧",admin_items_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧",admin_customers_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧",admin_root_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧",admin_genres_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト",destroy_customer_session_path,class: "btn ",method: :delete %>
                </li>
                <% else %>
                <li class="nav-item">
                  <%= link_to "About",about_path,class: "btn" %>
                </li>
                <li class="nav-item ">
                  <%= link_to"商品一覧",items_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to"新規登録",new_customer_registration_path,class: "btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to"ログイン",new_customer_session_path,class: "btn" %>
                </li>
                <% end %>
              </ul>
              <%= link_to "管理者ログイン",new_admin_session_path %>
        <%= link_to "ジャンル一覧",admin_genres_path %>
        <%= link_to "商品追加",new_admin_item_path %>
        <%= link_to "商品一覧",admin_items_path %>
        <%= link_to "会員一覧",admin_customers_path %>
        <%= link_to "管理者トップページ",admin_root_path %>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <div class="text-success text-center">
      <%= flash[:notice] %>
    </div>
    <div class="text-danger text-center">
      <%= flash[:error] %>
    </div>
    <%= yield %>
    <footer>
      <div class="container-fiuid pt-5">
        <div class="row bg-dark">
          <div class="py-4 w-100%"></div>
        </div>
      </div>
    </footer>
  </body>
</html>
