<div class="container">
  <div class="row">
    <h2>配送先編集</h2>
  </div>
  <div class="row col-offset-2 p-3">
    <%= render 'devise/shared/error_messages',resource: @address %>
    <%= form_with url: edit_address_path,model: @address do |f| %>
    <div class="form-group">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code  %>
    </div>
    <div class="form-group">
      <%= f.label :"住所" %>
      <%= f.text_field :address,:size=> "60" %>
    </div>
    <div class="form-group">
      <%= f.label :"宛名" %>
      <%= f.text_field :name %>
    </div>
    <div class="action">
      <%= f.submit "変更内容を保存",class: "btn btn-success" %>
    </div>
  </div>
</div>