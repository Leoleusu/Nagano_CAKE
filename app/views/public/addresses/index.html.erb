<div class="container">
  <h2>配送先登録/一覧</h2>
  <div class="row">
    <%= form_with url: addresses_path, model: @address, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: @address %>
    <div class="form-group">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
      <%= f.label :"住所" %>
      <%= f.text_field :address,:size=> "60"%>
    </div>
    <div class="form-group">
      <%= f.label :"宛名" %>
      <%= f.text_field :name %>
    </div>
    <div class="action">
      <%= f.submit :"新規登録",class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |a| %>
        <tr>
          <td><%= a.postal_code %></td>
          <td><%= a.address %></td>
          <td><%= a.name %></td>
          <td>
            <%= link_to "編集する",edit_address_path(a.id),class: "btn btn-success" %>
            <%= link_to "削除する",address_path(a.id),method: :delete,class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>