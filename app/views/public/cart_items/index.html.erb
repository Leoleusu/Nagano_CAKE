<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2> <%= link_to "カートを空にする",destroy_all_cart_items_path,class: "btn btn-danger" %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each |ci| do %>
        <tr>
          <td> <%= image_tag ci.image.get_image(20,20) %> <%= ci.name %> </td>
          <td> <%= ci.item.with_tax_price %></td>
          <td> <%= ci.amount %></td>
          <td> <%= (ci.item.with_tax_price * ci.amount %></td>
          <td> <%= link_to "削除する",destroy_cart_items_path,class: "btn btn-danger" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to "買い物を続ける",items_path,class: "btn btn-primary" %>
    <table class="table">
      <tr>
        <thead>
          <th>合計金額</th>
        </thead>
        <tbody>
          <%= ci.subtotal %>
        </tbody>
        <% end %>
      </tr>
    </table>
  </div>
  <div class="row">
    <%= link_to "情報入力に進む",about_path,class: "btn btn-success text-center" %>
  </div>
</div>