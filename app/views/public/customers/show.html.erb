<div class="container">
  <div class="row">
    <h3 class="m-3">マイページ</h3>
  </div>
  <div class="row">
    <h2 class="col-3">登録情報</h2>
    <%= link_to "編集する",edit_customer_path(@customer),class: "btn btn-success" %>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row my-3">
    <h3 class="col-3">配送先</h3><%= link_to "一覧を見る",addresses_path,class: "btn btn-primary" %>
  </div>
  <div class="row">
    <h3 class="col-3">注文履歴</h3><%= link_to"一覧を見る",orders_path,class: "btn btn-primary" %>
    <!--addresses_path,orders_path-->
  </div>
</div>