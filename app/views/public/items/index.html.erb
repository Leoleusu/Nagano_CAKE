<div class="container">
  <div class="row">

  </div>
  <div class="row pt-5">
    <h1>商品一覧</h1>
    <p class="d-flex align-items-end">(全<%= Item.all.count %>件)</p>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <%= link_to item_path(item),class: "card col-2 p-3 m-3" do %>
        <%= image_tag item.get_image(200,200),class: "card-img-top" %>
        <div class="card-text text-secondary">
          <p><%= item.name %><br/>
          ¥<%= item.with_tax_price %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>