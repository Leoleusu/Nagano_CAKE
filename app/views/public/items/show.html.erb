<div class="containew">
  <div class="row justify-content-md-center pt-3">
      <%= image_tag @item.get_image(200,200),class: "col-3 offset-md-1" %>
      <div class="col-6 offset-md-1">
        <h2><%= @item.name %></h2>
        <h4><small><%= @item.introduction %></small></h4>
        <div class="row m-1 mt-5 pt-4">
          <h4>¥<%= @item.with_tax_price %></h4>
          <p class="d-flex align-items-end">(税込)</p>
        </div>
        <div class="row offset-md-1">
          <%= form_with url: cart_items_path,model: @cart_item do |f| %>
            <%= f.hidden_field :item_id,:value => @item.id %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "カートに入れる",class: "btn btn-success" %>
          <% end %>
        </div>
    </div>
  </div>
</div>