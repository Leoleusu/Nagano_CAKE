<div class="container">
  <h1>注文情報入力</h1>
  <div clas="row">
    <%= form_with model: @order,url: orders_confirm_path do |f| %>
    <div class="form-group">
      <h3>支払方法</h3>
      <%= f.radio_button :purchase_price, 'credit_card' %>
      <%= f.label :"クレジットカード" %>
      <%= f.radio_button :purchase_price, 'transfar' %>
      <%= f.label :"銀行振込" %>
    </div>
    <div class="form-group">
      <h3>お届け先</h3>
      <div class="row">
        <%= f.radio_button :address_num, value = 0 %>
        <%= f.label :"ご自身の住所" %>
        <%= current_customer.customer_address %>
      </div>
      <div class="row">
        <%= f.radio_button :address_num, value = 1 %>
        <%= f.label :"登録済み住所から選択" %>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>
      <div class = "row">
        <%= f.radio_button :address_num,value = 2 %>
        <%= f.label :"新しいお届け先" %>
      </div>
          <div class="form-group">
            <%= f.label :"郵便番号(ハイフン無し)" %>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <%= f.label :"住所" %>
            <%= f.text_field :address %>
          </div>
          <div class="form-group">
            <%= f.label :"宛名" %>
            <%= f.text_field :name %>
          </div>
          <div>
          <%= f.submit "確認画面へ進む",class: "btn btn-primary text-center" %>
          </div>
        <% end %>
    </div>
  </div>
</div>