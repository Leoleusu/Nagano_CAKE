<div class="container">
  <div class="row">
    注文履歴詳細
  </div>
  <div class="row">
    <div class="col-7">
      <h2>注文情報</h2>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.is_active_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <h2>請求情報</h2>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= @order.payment - @order.postage %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.payment %></td>
        </tr>
      </table>
    </div>
    <div class="row">
      <h2>注文内容</h2>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |od| %>
          <tr>
            <td><%= od.item.name %></td>
            <td><%= od.item.with_tax_price %></td>
            <td><%= od.amount %></td>
            <td><%= od.item.with_tax_price*od.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>