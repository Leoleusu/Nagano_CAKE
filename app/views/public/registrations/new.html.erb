<div class="container">
  <div class="row offset-md-1 my-3">
    <h2>新規会員登録</h2>
  </div>
  <div class="row-fluid">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :"名前",class: "col-3" %>
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name,autofocus: true,placeholder: "令和" %>
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name,placeholder: "道子" %>
      </div>
      <div class="form-field">
        <%= f.label :"フリガナ",class: "col-3" %>
        <%= f.label :"(セイ)" %>
        <%= f.text_field :last_name_kana,placeholder: "レイワ" %>
        <%= f.label :"(ナ)" %>
        <%= f.text_field :first_name_kana,placeholder: "ミチコ" %>
      </div>
      <div class="form-field">
        <%= f.label :"メールアドレス",class: "col-3" %>
        <%= f.email_field :email,placeholder: "sample@example.com" %>
      </div>
      <div class="form-field">
        <%= f.label :"郵便番号(ハイフンなし)",class: "col-3" %>
        <%= f.text_field :postal_code,placeholder: "0000000" %>
      </div>
      <div class="form-field">
        <%= f.label :"住所",class: "col-3" %>
        <%= f.text_field :"address",:size=> "60",placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
      <div class="form-field">
        <%= f.label :"電話番号(ハイフンなし)",class: "col-3" %>
        <%= f.text_field :telephone_number,placeholder: "0000000000" %>
      </div>
      <div class="form-inline">
        <div class="form-group col-3">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password",class: "m-1" %>
      </div>

      <div class=form-"field me-3">
        <%= f.label :"パスワード(確認用)",class: "col-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <%= f.hidden_field :is_deleted, :value => 0 %>

      <div class="actions m-3">
        <%= f.submit "新規登録",class: "btn btn-success offset-md-2" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>
